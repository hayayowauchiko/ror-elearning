<div class="row">
    <h1 class="text-center">Lesson</h1>
    <div class="col-md-6 word">
        <h3><%= @lesson_word.word.content %></h3>
    </div>
    <div class="col-md-6 answer">
        <% @lesson_word.word.word_answers.each do |answer| %>
        <div><%= link_to answer.content,
            lesson_word_path(
                            lesson_id: @lesson_word.lesson_id,
                            id: @lesson_word.id,
                            word_answer_id: answer.id),
                            class: "btn",
                            method: :patch %> </div>
                            <!-- 上記ではupdateのresource通りに記述する必要あり。 -->
                            <!-- word_answer_idのようにURLに記述しないIDも送信することが可能 -->
    <% end %>
    </div>
</div>
